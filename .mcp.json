{
    "mcpServers": {
        "serena": {
            "command": "uvx",
            "args": [
                "--from",
                "git+https://github.com/oraios/serena",
                "serena",
                "start-mcp-server",
                "--context",
                "ide-assistant",
                "--project",
                "/opt/vision_model"
            ]
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "clean-code": {
            "command": "npx",
            "args": [
                "-y",
                "mcp-clean-code"
            ]
        },
        "vibe-check-mcp": {
            "command": "npx",
            "args": [
                "-y",
                "@pv-bhat/vibe-check-mcp",
                "start",
                "--stdio"
            ]
        },
        "context7": {
            "command": "npx",
            "args": [
                "mcp-remote",
                "https://mcp.context7.com/mcp",
                "--allow-http"
            ]
        },
        "exa": {
            "command": "npx",
            "args": [
                "-y",
                "mcp-remote",
                "https://mcp.exa.ai/mcp"
            ]
        },
        "ref": {
            "command": "npx",
            "args": [
                "ref-tools-mcp@latest"
            ],
            "env": {
                "REF_API_KEY": "ref-66ea9c82011202b4fb79"
            }
        },
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
            }
        },
        "semgrep": {
            "command": "npx",
            "args": [
                "-y",
                "@semgrep/mcp-server-semgrep"
            ],
            "env": {
                "SEMGREP_APP_TOKEN": "${SEMGREP_APP_TOKEN}"
            }
        },
        "mindpilot": {
            "command": "npx",
            "args": [
                "@mindpilot/mcp@latest",
                "--disable-analytics"
            ]
        },
        "octocode": {
            "command": "npx",
            "args": [
                "-y",
                "octocode-mcp"
            ]
        }
    }
}